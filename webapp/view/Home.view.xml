<mvc:View
    controllerName="com.app.readdatafromxlfile.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page
                    id="page"
                    title="Read From Excel"
                >
                    <customHeader>
                        <Bar id="_IDGenBar1">
                            <contentMiddle>
                                <Label
                                    id="_IDGenLabel1"
                                    text="Read Data From Excel"
                                />
                            </contentMiddle>
                            <contentRight>
                                <!-- <Button
                                    id="idAddBtn"
                                    type="Transparent"
                                    icon="sap-icon://add"
                                /> -->
                                <Button
                                    id="idClearBtn"
                                    text="Clear"
                                    type="Transparent"
                                    press="onClearPressData"
                                />
                                <u:FileUploader
                                    id="FileUploaderId"
                                    sameFilenameAllowed="true"
                                    iconOnly="false"
                                    buttonOnly="true"
                                    fileType="XLSX,xlsx"
                                    icon="sap-icon://upload"
                                    iconFirst="true"
                                    style="Emphasized"
                                    change="onUpload"
                                />
                            </contentRight>
                        </Bar>
                    </customHeader>
                    <content>
                        <Table
                            id="dynamicTable"
                            items="{localModel>/items}"
                        >
                            <columns>
                                <Column id="_IDGenColumn1">
                                    <Label
                                        id="_IDGenLabel2"
                                        text="Name"
                                    />
                                </Column>
                                <Column id="_IDGenColumn2">
                                    <Label
                                        id="_IDGenLabel3"
                                        text="Age"
                                    />
                                </Column>
                                <Column id="_IDGenColumn3">
                                    <Label
                                        id="_IDGenLabel4"
                                        text="Job"
                                    />
                                </Column>
                                <Column id="_IDGenColumn4">
                                    <Label
                                        id="_IDGenLabel5"
                                        text="Address"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1">
                                    <cells>
                                        <Text
                                            id="_IDGenText1"
                                            text="{localModel>Name}"
                                        />
                                        <Text
                                            id="_IDGenText2"
                                            text="{localModel>Age}"
                                        />
                                        <Text
                                            id="_IDGenText3"
                                            text="{localModel>Job}"
                                        />
                                        <Text
                                            id="_IDGenText4"
                                            text="{localModel>Address}"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
